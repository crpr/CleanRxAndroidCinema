<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crpr.androidcinema">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CinemaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Cinema">
        <meta-data
            android:name="environment"
            android:value="@string/environment" />

        <activity android:name=".presentation.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.welcome_wizard.WelcomeWizardActivity" />
        <activity android:name=".presentation.discover.DiscoverActivity" />
    </application>

</manifest>