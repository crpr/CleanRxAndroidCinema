<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/grey_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/discover_poster_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription=""/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/discover_poster_image"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/discover_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical|start"
                android:layout_toStartOf="@+id/discover_rating"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="asdasdasd asdasd as dd as"
                android:textColor="@color/accent"
                android:padding="4dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/discover_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>