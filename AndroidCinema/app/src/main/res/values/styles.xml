<resources>

    <style name="Cinema" parent="Cinema.Base">
    </style>

    <style name="Cinema.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ThemeToolbarDarkOverflow" parent="Cinema">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ImageGridItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginEnd">@dimen/spacing_tiny</item>
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="TopImageGridItem" parent="ImageGridItem">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="ImageGridThumb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_thumb_item_height</item>
    </style>

</resources>
